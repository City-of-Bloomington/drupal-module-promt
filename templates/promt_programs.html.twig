<div class="promt_programs">
    {% for p in programs %}
    <article>
        <a href="{{ path('promt.program', {'id': p.id}) }}">
            <header><h3>{{ p.title }}</h3></header>
            <p>{{ p.statement }}</p>
        </a>
    </article>
    {% endfor %}
</div>
